{
  "manifest_version": 3,
  "name": "Dev Peek",
  "version": "2.0",
  "description": "Inspect and edit web page elements with Figma-like design capabilities.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/eye.png",
      "48": "icons/eye48x48.png",
      "128": "icons/eye128.png"
    },
    "default_title": "Dev Peek"
  },
  "background": {
    "page": "background.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dev-peek@example.com"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "coloris.min.js",
        "coloris.min.css",
        "node_modules/@spectrum-css/vars/dist/spectrum-dark.css",
        "node_modules/@spectrum-css/typography/dist/index.min.css",
        "node_modules/@spectrum-css/textfield/dist/index.min.css",
        "node_modules/@spectrum-css/button/dist/index.min.css",
        "node_modules/@spectrum-css/picker/dist/index.min.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
